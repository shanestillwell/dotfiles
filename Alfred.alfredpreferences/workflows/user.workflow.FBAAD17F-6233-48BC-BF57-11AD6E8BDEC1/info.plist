				<string>const content = "{query}".trim()
const safeContent = encodeURIComponent(content).toLowerCase()
const buildLink = (style) =&gt; {
  return `https://gh-labels.dancrews.com/${style.toLowerCase()}/${safeContent}.svg`
}

const buildItem = ({ style, urlOnly }) =&gt; {
  const type = urlOnly ? 'Icon' : 'Markdown'
  const link = buildLink(style)
  const altText = `${style}: ${content}`
  const fullText = `![${altText}](${link})`
  
  const title = `${type}: ${altText}`
  const arg = urlOnly ? link : fullText

  return {
    title,
    arg,
    icon: {
      path: `images/${style.toLowerCase()}.png`
    }
  }
}

const items = [
  buildItem({ style: 'Passing' }),
  buildItem({ style: 'Optional' }),
  buildItem({ style: 'Blocking' }),
  buildItem({ style: 'Passing', urlOnly: true }),
  buildItem({ style: 'Optional', urlOnly: true }),
  buildItem({ style: 'Blocking', urlOnly: true }),
]

// console.log(JSON.stringify({ items }))

JSON.stringify({ items })
